---
import "@styles/objects/_legal-pages.scss";
import Layout from "@layouts/Layout.astro";
import { getPageById } from "@services/api";
import type { InferGetStaticParamsType, InferGetStaticPropsType, GetStaticPaths } from "astro";

export const getStaticPaths = async () => {
  const privacy: any = await getPageById("berliner-schnauze-datenschutz");
  const imprint: any = await getPageById("berliner-schnauze-impressum");

  const pages = [privacy, imprint];

  return pages.map((page) => {
    let betterSlug;
    if (page.slug === "berliner-schnauze-datenschutz") {
      betterSlug = "datenschutz";
    } else if (page.slug === "berliner-schnauze-impressum") {
      betterSlug = "impressum";
    }

    return {
      params: {
        legalPages: betterSlug,
      },
      props: {
        page,
      },
    };
  });
};

type Params = InferGetStaticParamsType<typeof getStaticPaths>;
type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { legalPages }: any = Astro.params as Params;
const { page } = Astro.props as Props;
---

<Layout content={page}>
  <article set:html={page.content} />
</Layout>
