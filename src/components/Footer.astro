const socialMenu = [
  {
    link: "https://github.com/felix-berlin/berliner-schnauze",
    title: "Github",
  },
  {
    link: "https://mastodon.social/@berliner_schnauze",
    rel: "me",
    title: "Mastodon",
  },
  {
    link: "https://www.facebook.com/Berliner.Schnauze030",
    title: "Facebook",
  },
];
const fundingMenu = [
  {
    link: funding.find((f) => f.type === "GitHub Sponsors")?.url,
    title: "GitHub Sponsors",
  },
  {
    link: funding.find((f) => f.type === "Ko-fi")?.url,
    title: "Ko-fi",
  },
  {
    link: funding.find((f) => f.type === "PayPal")?.url,
    title: "PayPal",
  },
];

const navMenu1 = [
  {
    link: "/wort-vorschlagen",
    title: "Wort vorschlagen",
  },
  {
    link: "/wort",
    title: "Wort Index",
  },
  {
    link: "https://github.com/felix-berlin/berliner-schnauze/releases",
    title: "Changelog",
  },
  {
    link: "https://github.com/felix-berlin/berliner-schnauze/issues/new",
    title: "tech. Fehler melden",
  },
];

const navMenu2 = [
  {
    link: "/impressum",
    title: "Impressum",
  },
  {
    link: "/datenschutz",
    title: "Datenschutz",
  },
];
---

<footer class="c-footer">
  <div class="c-footer__farewell u-max-body-width">
    <div class="c-footer__farewell-image-wrapper">
      <Picture
        alt="Ein B√§r der durch die Stadt l√§uft"
        class="c-footer__farewell-image"
        formats={["avif", "webp"]}
        layout="constrained"
        src={BearWalking}
      />
    </div>
    <p class="c-footer__farewell-text">Knorke ditt du mich hier unten besuchst.</p>
  </div>

  <div class="c-footer__ground">
    <div class="c-footer__wrapper u-max-body-width">
      <div class="c-footer__ground-app-install">
        <h2>Installiere die App</h2>
        <p>Mit der Berliner Schnauze App bleibst Du immer informiert, ob online oder offline.</p>
        <InstallApp client:only="vue" cssClasses={"c-button--center-icon c-button"} showIcon={true}>
          <Download height={16} width={16} /> App installieren
          <p slot="installed">Du nutzt bereits die App.</p>
        </InstallApp>
      </div>

      <div>
        <h2>Seiten</h2>
        <NavList
          classesNav={"c-footer__nav"}
          classesUl={"c-footer__nav-list u-list-reset"}
          items={navMenu1}
        />
      </div>

      <div>
        <h2>Projekt unterst√ºtzen</h2>
        <NavList
          classesNav={"c-footer__nav"}
          classesUl={"c-footer__nav-list u-list-reset"}
          items={fundingMenu}
        />
      </div>

      <div>
        <h2>Social Media</h2>
        <NavList
          classesNav={"c-footer__nav"}
          classesUl={"c-footer__nav-list u-list-reset"}
          items={socialMenu}
        />
      </div>

      <div>
        <h2>Andere</h2>
        <NavList
          classesNav={"c-footer__nav is-legal"}
          classesUl={"c-footer__nav-list u-list-reset"}
          items={navMenu2}
        />
      </div>
    </div>
  </div>
</footer>
<div class="c-footer__end">
  <div class="c-footer__end-content u-max-body-width">
    <a href="https://github.com/felix-berlin/berliner-schnauze/releases"
      >Website Version: {version}</a
    >
    <p>Ein Projekt von: <a href="https://webshaped.de">Webshaped / Felix Scholze</a></p>
    <CarbonBadge />
    <p>Hergestellt mitüêª-Kr√§ften in Berlin</p>
  </div>
</div>
